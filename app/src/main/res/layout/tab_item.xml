<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tab_item_iv"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/tab_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="测试项目" />

    <com.hedgehog.ratingbar.RatingBar
        android:id="@+id/tab_item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:starCount="5"
        app:starEmpty="@drawable/star_default"
        app:starFill="@drawable/star_full" />


    <TextView
        android:id="@+id/tab_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机应用" />

    <TextView
        android:id="@+id/tab_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20.3MB" />
</LinearLayout>